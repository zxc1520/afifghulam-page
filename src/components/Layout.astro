---
import Navbar from "./Navbar.astro";
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | afifghulam</title>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="bg-gray-100 text-gray-900">
  <Navbar site="Afif Qomarul Ghulam" />
  
  <main class="flex flex-col mx-auto md:m-auto lg:mx-[350px] py-8">
    <slot />
  </main>
  
  <footer class="bg-gray-800 text-gray-300 py-6 mt-12">
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between px-4">
      <p class="text-sm">
        Made with <span class="text-red-500">❤</span> by 
        <span class="font-semibold text-white">Afif Ghulam</span>
      </p>
      <p class="text-xs text-gray-400 mt-2 md:mt-0">
        © {new Date().getFullYear()} All Rights Reserved
      </p>
    </div>
  </footer>
  
  <style>
    body {
      padding-top: 4rem; /* 64px to match navbar height */
    }
  </style>
</body>
</html>
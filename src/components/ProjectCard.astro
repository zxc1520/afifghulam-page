---
export interface Props {
     title: string;
     desc: string;
     image: string;
     tags: Array<string>;
}

const { title, desc, image, tags } = Astro.props;
---
<div class="max-w-sm rounded-md overflow-hidden shadow-lg">
          <div class="relative w-full">
               <img class="object-cover overflow-hidden w-full h-40" 
                    src={image}
                    alt="gambar">
          </div>
          <div class="flex flex-col items-start p-3">
               <h2 class="text-xl font-medium">{title}</h2>
               <span class="truncate font-light overflow-hidden text-start text-grey-500">{desc}</span>
               <ul class="flex flex-row mt-2 gap-1 items-center">
                    {tags?.map((el: any) => (
                         <li class="bg-blue-100 p-1 font-light text-sm text-blue-500">{el}</li>
                    ))}
               </ul>
          </div>
</div>
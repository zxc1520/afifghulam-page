---
import Layout from "../components/Layout.astro"
import Project from "../components/ProjectCard.astro"
import profileImage from '../../public/assets/aku.png'
import { Image } from "astro:assets";

const allProjects = await Astro.glob('../content/projects/*.md');
const recent = allProjects.slice(2, 5);
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="hero text-center py-20 bg-gradient-to-b from-gray-50 to-white mb-12">
    <p class="text-sm text-gray-500 mb-2">ðŸ‘‹ Hello Everyone!</p>
    <h1 class="text-5xl font-extrabold mb-4">
      I'm Afif <span class="text-blue-600">Qomarul</span> Ghulam
    </h1>
    <p class="text-lg text-gray-600 mb-6">
      Software Engineer | Tech Enthusiast | Lifelong Learner
    </p>
    <a href="#projects" class="px-6 py-3 bg-blue-600 text-white rounded-xl shadow-md hover:bg-blue-700 transition">
      View My Projects
    </a>
  </section>

  <!-- About Section -->
  <section class="about max-w-4xl mx-auto bg-white p-8 rounded-2xl shadow-md mb-16">
	  <h2 class="text-3xl font-bold mb-4 text-center">About Me</h2>
    <div class="flex flex-col md:flex-row items-center gap-6">
      <!-- Profile Image -->
      <Image 
        src={profileImage} 
        alt="Afif Ghulam" 
        width={150} 
        height={150} 
        class="w-32 h-32 rounded-full shadow-lg border-2 border-gray-200 object-cover"
      />
      <div>
        <p class="text-gray-700 leading-relaxed">
          I'm an IT Enthusiast with hands-on experience in <b>Fullstack Development</b>,
          <b>Back End Engineering</b>, and <b>DevOps</b>. Skilled in
          Laravel, AdonisJS, Git, Docker, and Ansible, with cloud experience on
          <b>Google Cloud</b> and <b>AWS</b>. I love solving problems,
          adapting to new challenges, and continuously improving my skills.
        </p>
      </div>
    </div>
   </section>

  <!-- Experience Section -->
  <section id="experience" class="max-w-3xl mx-auto mb-16 px-4">
    <h2 class="text-3xl font-bold text-center mb-10">Experience</h2>
    
    <div class="relative border-l border-gray-300">
      
      <!-- IT Officer -->
      <div class="mb-10 ml-6">
        <!-- Marker -->
        <div class="absolute w-3 h-3 bg-blue-600 rounded-full mt-1.5 -left-1.5 border border-white"></div>
        <!-- Card -->
        <div class="bg-white shadow-md rounded-xl p-6">
          <h3 class="text-xl font-semibold">Information Technology Officer</h3>
          <p class="text-gray-700 font-medium mb-2">PT Semangat Bersama Enterpreneurship</p>
          <p class="text-sm text-gray-500 mb-3">February 2025 - Present</p>
          <ul class="list-disc list-inside text-gray-600 space-y-1">
            <li>
              Developing, managing, and maintaining a web-based internal digital system to support production activities, quality assurance, certification processes, and the maintenance of the seed breeding system using <b>Laravel</b>.
            </li>
          </ul>
        </div>
      </div>

      <!-- Backend Developer -->
      <div class="mb-10 ml-6">
        <!-- Marker -->
        <div class="absolute w-3 h-3 bg-blue-600 rounded-full mt-1.5 -left-1.5 border border-white"></div>
        <!-- Card -->
        <div class="bg-white shadow-md rounded-xl p-6">
          <h3 class="text-xl font-semibold">Backend Developer</h3>
          <p class="text-gray-700 font-medium mb-2">Profile Image Studio</p>
          <p class="text-sm text-gray-500 mb-3">June 2023 - November 2024</p>
          <ul class="list-disc list-inside text-gray-600 space-y-1">
            <li>
              Developing REST API for <b>Dinas Kominfo Provinsi Jawa Timur Majadigi Portal Layanan Jatim</b> using <b>AdonisJS</b>.
            </li>
            <li>
              Developing a REST API for <b>Road Report Dinas PUPR Kota Batu</b> using <b>AdonisJS</b>.
            </li>
            <li>
              Developing a REST API for Internship's Attendance using AdonisJS
            </li>
          </ul>
        </div>
      </div>

    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="max-w-6xl mx-auto text-center mb-16">
    <p class="text-sm font-semibold text-gray-600">Always get in touch with</p>
    <h2 class="text-3xl font-bold mb-6">Top Projects Contribution</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {recent.map(el => (
        <Project 
          title={el.frontmatter.title}
          desc={el.frontmatter.desc}
          image={el.frontmatter.image}
          tags={el.frontmatter.tags}
          slug={el.frontmatter.slug} 
        />
      ))}
    </div>
  </section>
</Layout>

